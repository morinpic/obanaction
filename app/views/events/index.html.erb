<h2>イベント一覧</h2>
<ul>
  <% @events.each do |event| %>
    <li>
      <%= link_to event do %>
        <h4><%= event.name %></4>
        <p><%= event.start_time.strftime('%Y/%m/%d %H:%M') %> - <%= event.end_time.strftime('%Y/%m/%d %H:%M') %></p>
        <%= image_tag event.image.url(:thumb) if event.image.present? %>
      <% end %>
    </li>
  <% end %>
</ul>
